{
  "manifest_version": 3,
  "name": "Zenix",
  "version": "2.0",
  "description": "Transform any webpage into an interactive AI assistant powered by Google Gemini 2.0 Flash",
  "icons": {
    "128": "/logo.png"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*",
    "http://localhost:3000/*"
  ],
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "action": {
    "default_title": "Open Zenix",
    "default_icon": "/logo.png"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ]
}
