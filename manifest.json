{
  "manifest_version": 3,
  "name": "AI Webpage Assistant",
  "version": "2.0",
  "description": "Transform any webpage into an interactive AI assistant powered by Google Gemini 2.5 Flash",
  "icons": {
    "128": "/icon.jpg"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open AI Assistant",
    "default_icon": "icon.jpg"
  },
  "background": {
    "service_worker": "background.js"
  }
}
